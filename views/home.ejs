<script>
const name = "Aditya Patel";
const el = document.getElementById("typewriter-name");
let idx = 0;
let typing = true;

function typeWriter() {
  if (typing) {
    if (idx <= name.length) {
      el.textContent = name.slice(0, idx);
      idx++;
      setTimeout(typeWriter, 200);
    } else {
      typing = false;
      setTimeout(typeWriter, 600);
    }
  } else {
    if (idx > 0) { // Only show name while idx > 0
      el.textContent = name.slice(0, idx);
      idx--;
      setTimeout(typeWriter, 160);
    } else {
      el.textContent = ""; // Ensure empty before restarting
      typing = true;
      setTimeout(typeWriter, 500);
    }
  }
}

typeWriter();
</script>